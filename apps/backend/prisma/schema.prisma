generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id Int @id @default(autoincrement())

  active      Boolean    @default(true)
  round       Int        @default(0)
  totalRounds Int
  guesses     Int        @default(1)
  difficulty  Difficulty @default(NORMAL)
  area        Area @default(NORMAL)

  members Member[]
  rounds  Round[]
}

model Player {
  id Int @id @default(autoincrement())

  name String

  members Member[]
}

model Member {
  id Int @id @default(autoincrement())

  connected Boolean @default(true)
  isOwner   Boolean @default(false)

  game     Game    @relation(fields: [gameId], references: [id])
  gameId   Int
  player   Player  @relation(fields: [playerId], references: [id])
  playerId Int
  guesses  Guess[]
}

model Round {
  id Int @id @default(autoincrement())

  imageId Int
  image   Image   @relation(fields: [imageId], references: [id])
  gameId  Int
  game    Game    @relation(fields: [gameId], references: [id])
  guesses Guess[]
}

model Image {
  id Int @id @default(autoincrement())

  cordinates String
  url        String
  difficulty Difficulty
  area       Area

  Round Round[]
}

model Guess {
  id Int @id @default(autoincrement())

  cordinates String
  score      Int    @default(0)

  roundId  Int
  round    Round  @relation(fields: [roundId], references: [id])
  memberId Int
  member   Member @relation(fields: [memberId], references: [id])
}

enum Difficulty {
  EASY
  NORMAL
  HARD
}

enum Area {
  NORMAL
  EXPANDED
  ALL
}
